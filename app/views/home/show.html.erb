<div class="row">
  <div class="col-md-3 nav-fixed">

    <div class="row">
      <div class="col-md-12">
        <!-- Begin user profile -->
        <div class="box box-widget widget-user">
          <div class="widget-user-header bg-aqua">
            <h3 class="widget-user-username">Alexander Pierce</h3>
            <h5 class="widget-user-desc">Founder &amp; CEO</h5>
          </div>
          <div class="widget-user-image">
            <img class="img-circle" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="User Avatar">
          </div>
          <div class="box-footer">
            <%= react_component "CounterPostsComments", post: Post.new, comment: Comment.new %>
            <div class="row">
              <div class="col-md-12">
                <div class="pad-ver text-center">
                  <button class="btn btn-primary">Nom</button>
                  <button class="btn btn-primary">Avatar</button>
                  <button class="btn btn-primary">Pseudo</button>
                  <button class="btn btn-primary">Poste</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-md-12">
        <div class="box box-widget widget-user-2">
          <div class="widget-user-header bg-yellow">
            <h3 class="widget-user-username">Nos meilleurs bloggers !!!</h3>
          </div>
          <div class="box-footer no-padding">
            <ul class="nav nav-stacked">
              <li><a href="#">Projects <span class="pull-right badge bg-blue">31</span></a></li>
              <li><a href="#">Tasks <span class="pull-right badge bg-aqua">5</span></a></li>
              <li><a href="#">Completed Projects <span class="pull-right badge bg-green">12</span></a></li>
              <li><a href="#">Followers <span class="pull-right badge bg-red">842</span></a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-md-12">
          <%= react_component "CounterMembers", user: User.new %>
      </div>
    </div>

  </div>

  <div class="col-md-9">
    <%= react_component "Store", current_user: current_user %>
  </div>

</div>
